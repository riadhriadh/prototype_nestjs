# EditorConfig
# top-most EditorConfig file
# every file
# Unix-style newlines
# newline ending
# character set is utf-8
# use spaces
# set the indent size to 4

root = true

[*]
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8
indent_style = space
indent_size = 4

[*.md]
trim_trailing_whitespace = false
